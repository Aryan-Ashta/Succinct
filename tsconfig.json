{
  "extends": "expo/tsconfig.base.json",
  
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "esnext",

    "paths": {
      "@/*": [
        "./*"
      ],
      "tslib" : ["path/to/node_modules/tslib/tslib.d.ts"]
    
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
